services:

  app:
    image: registry.gmedia.id/erp-api:rust
    ports:
      - "8081:8080"
    env_file:
      - .env.test
    depends_on:
      mariadb:
        condition: service_healthy
      meilisearch:
        condition: service_healthy
    networks:
      - erp-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/inventory/search"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 40s

  mariadb:
    image: mariadb:latest
    env_file:
      - .env.test
    volumes:
      - mariadb_data:/var/lib/mysql
    networks:
      - erp-network
    healthcheck:
        test:
            - CMD
            - healthcheck.sh
            - '--connect'
            - '--innodb_initialized'
        interval: 10s
        timeout: 5s
        retries: 5

  meilisearch:
    image: getmeili/meilisearch:latest
    env_file:
      - .env.test
    volumes:
      - meilisearch_data:/meili_data
    networks:
      - erp-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:7700/health"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  mariadb_data:
  meilisearch_data:

networks:
  erp-network:
    driver: bridge