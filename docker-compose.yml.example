services:
  mariadb:
    image: mariadb:latest
    env_file:
      - .env
    ports:
      - "3306:3306"
    volumes:
      - mariadb_data:/var/lib/mysql
    networks:
      - erp-network
    healthcheck:
        test:
            - CMD
            - healthcheck.sh
            - '--connect'
            - '--innodb_initialized'
        interval: 10s
        timeout: 5s
        retries: 5

  meilisearch:
    image: getmeili/meilisearch:latest
    env_file:
      - .env
    ports:
      - "7700:7700"
    volumes:
      - meilisearch_data:/meili_data
    networks:
      - erp-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:7700/health"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  mariadb_data:
  meilisearch_data:

networks:
  erp-network:
    driver: bridge